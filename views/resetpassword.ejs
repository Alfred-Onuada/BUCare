<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Reset Password | BUCare</title>
	<link href="//fonts.googleapis.com/css?family=Nunito:400,600,700&display=swap" rel="stylesheet">
	<link rel="shortcut icon" href="media/imgs/template/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

	<!-- Template CSS -->
	<link rel="stylesheet" href="css/template_styles/style-starter.css">

	<!-- My Styles -->
	<link rel="stylesheet" href="css/style.css">
</head>

<body>
	
	<%- include('./partials/header') %> 
	<hr style="margin-top: -5px">

	<!-- admin's page should make use of the security question -->
	<div class="container-fluid resetpwdcontainer">
		<form>
			<div class="resetpwdbox">
				<div class="resetpwdstage">BUCare password reset portal</div>
				<hr>
				<% if (userStatus) { %>
					<div id="resetpwdcontent" class="resetpwdcontent">
						<!-- Error Alert box -->
						<div id="errorBox5" class="alert alert-danger hide" role="alert"></div>
		
						<!-- Success Alert box -->
						<div id="successBox5" class="alert alert-success hide" role="alert"></div>
		
						<div>
							<div class="styled-input">
								<label for="oldpwd">Enter your old password: </label>
								<input class="rpInput" id="oldpwd" name="oldpwd" type="password" placeholder="********" required>
								<span onclick="showPassword(this)" class="showPasswordIcon-reset bi bi-eye"></span>
								<span onclick="hidePassword(this)" class="hide showPasswordIcon-reset bi bi-eye-slash"></span>
							</div>
			
							<button id="verifyBtn" type="button" onclick="changepwd()" class="btn btn-secondary">Verify</button>
						</div>
		
						<div id="newpwd" class="hide">
		
							<div class="styled-input" style="margin: 10px 0px;">
								<label for="newPassword">Enter a new password: </label>
								<input class="rpInput" id="newPasswordInput" name="newPassword" type="password" placeholder="********" minlength="8">
								<span onclick="showPassword(this)" class="showPasswordIcon-reset bi bi-eye"></span>
								<span onclick="hidePassword(this)" class="hide showPasswordIcon-reset bi bi-eye-slash"></span>
							</div>
		
							<div class="styled-input" style="margin: 10px 0px;">
								<label for="confirmPassword">Confrim your password: </label>
								<input class="rpInput" id="confirmPasswordInput" name="confirmPassword" type="password" placeholder="********" minlength="8">
								<span onclick="showPassword(this)" class="showPasswordIcon-reset bi bi-eye"></span>
								<span onclick="hidePassword(this)" class="hide showPasswordIcon-reset bi bi-eye-slash"></span>
							</div>
		
							<button id="changePwdBtn" type="button" class="btn btn-secondary" disabled>Change Password</button>
						</div>
					</div>
				<% } %>
				<div id="forgotpwdcontent" <% if (userStatus) { %> class="forgotpwdcontent hide" <% } else { %> class="forgotpwdcontent" <% } %>>
					<div class="resetPasswordAlertBoxConatiner">
						<!-- Error Alert box -->
						<div id="errorBox6" class="alert alert-danger hide" role="alert"></div>
			
						<!-- Success Alert box -->
						<div id="successBox6" class="alert alert-success hide" role="alert"></div>
					</div>

					<div>
						<div class="styled-input">
							<label for="fpwdemail">Enter the email linked to your account: </label>
							<input style="width: 27vw !important" class="rpInput" id="fpwdemail" name="fpwdemail" type="email" placeholder="abc@xyz.com" required>
						</div>
		
						<button id="sendFPwdBtn" type="button" onclick="sendFPwd()" class="btn btn-secondary">Verify & Send reset token</button>
					</div>

					<div id="resetPwdTokenDiv" class="hide">
						<div class="styled-input">
							<label for="fpwdtoken">Enter the token sent to your email: </label>
							<input class="rpInput" id="fpwdtoken" name="fpwdtoken" type="text" required>
						</div>
		
						<button id="verifyTokenFPwdBtn" type="button" class="btn btn-secondary">Verify token</button>
					</div>

					<div id="newpwd-F" class="hide">
		
						<div class="styled-input" style="margin: 10px 0px;">
							<label for="newPassword-F">Enter a new password: </label>
							<input class="rpInput" id="newPasswordInput-F" name="newPassword-F" type="password" placeholder="********" minlength="8">
							<span onclick="showPassword(this)" class="showPasswordIcon-reset bi bi-eye"></span>
							<span onclick="hidePassword(this)" class="hide showPasswordIcon-reset bi bi-eye-slash"></span>
						</div>
	
						<div class="styled-input" style="margin: 10px 0px;">
							<label for="confirmPassword-F">Confrim your password: </label>
							<input class="rpInput" id="confirmPasswordInput-F" name="confirmPassword-F" type="password" placeholder="********" minlength="8">
							<span onclick="showPassword(this)" class="showPasswordIcon-reset bi bi-eye"></span>
							<span onclick="hidePassword(this)" class="hide showPasswordIcon-reset bi bi-eye-slash"></span>
						</div>
	
						<button id="changePwdBtn-F" type="button" class="btn btn-secondary" disabled>Change Password</button>
					</div>

				</div>
				<% if (userStatus) { %>
					<hr>
					<div class="resetpwdfooter">
						<h6 id="pwdportalswitch" class="forgetpwd" data-current="Forgot your password?" onclick="switchPasswordPortal()">Forgot your password?</h6>
					</div>
				<% } %>
			</div>
		</form>
	</div>
	
	<!-- This script hides the topHeader for only this page -->
	<script>
		document.querySelector('#topHeader').classList.add('hide');
  </script>

	<!-- //copyright -->
	<!-- Template JavaScript -->
	<script src="js/template_scripts/jquery-3.3.1.min.js"></script>
	<script src="js/template_scripts/theme-change.js"></script>
	<!--/MENU-JS-->
	<script>
		$(window).on("scroll", function () {
			var scroll = $(window).scrollTop();

			if (scroll >= 80) {
				$("#site-header").addClass("nav-fixed");
			} else {
				$("#site-header").removeClass("nav-fixed");
			}
		});

		//Main navigation Active Class Add Remove
		$(".navbar-toggler").on("click", function () {
			$("header").toggleClass("active");
		});
		$(document).on("ready", function () {
			if ($(window).width() > 991) {
				$("header").removeClass("active");
			}
			$(window).on("resize", function () {
				if ($(window).width() > 991) {
					$("header").removeClass("active");
				}
			});
		});
	</script>
	<!--//MENU-JS-->
	<script src="js/template_scripts/bootstrap.bundle.min.js"></script>
	<script src="js/template_scripts/bootstrap.min.js"></script>

	<!-- My Script -->
	<script src="js/script.js"></script>

</body>

</html>