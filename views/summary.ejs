<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <base href="/">
  <title>Users Summary | BUCare</title>
  <link href="//fonts.googleapis.com/css?family=Nunito:400,600,700&display=swap" rel="stylesheet" />
  <link rel="shortcut icon" href="media/imgs/template/favicon.ico" type="image/x-icon" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

  <!-- Template CSS -->
  <link rel="stylesheet" href="css/template_styles/bootstrap.min.css" />
  <link rel="stylesheet" href="css/template_styles/style-starter.css" />

  <!-- My Styles -->
  <link rel="stylesheet" href="css/style.css" />

  <script src="https://kit.fontawesome.com/dc8ee980c4.js" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('./partials/header') %>

  <div id="toastContainer" class="toast4UpdateInfo"></div>

  <!-- Modal -->
  <div class="modal fade" id="deleteUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteUserModalLabel">
            Confirmation Dialog
          </h5>
        </div>
        <div class="modal-body">
          <center>
            <h3>Are you sure?</h3>
          </center>
        </div>
        <div class="modal-footer">
          <button id="deleteUserCloseBtn" type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <button onclick="deleteUser()" id="deleteUserBtn" type="button" class="btn btn-primary">
            Yes
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal 4 report info -->
  <div class="modal fade" id="reportInfoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="reportInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="reportInfoModalLabel">
            Report Information
          </h5>
        </div>
        <div class="modal-body">
          <p>
            <i style="color: #007bff" id="inReportTId1"></i> filed this report
            against <i style="color: #007bff" id="inReportCId"></i> under the
            category of <i style="color: #007bff" id="inReportCat"></i>.
            <br /><br />
            <i style="color: #007bff" id="inReportTId2"></i> said &quot;
            <i style="color: #007bff" id="inReportComment"></i> &quot;
            <i></i>
          </p>
        </div>
        <div class="modal-footer">
          <button id="dimissReportBtn" class="btn btn-secondary" onclick="dismissReport()">
            Dimiss case
          </button>
          <button id="reportInfoCloseBtn" type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <button class="hide" data-bs-toggle="modal" data-bs-target="#reportInfoModal" id="reportModalBtn"></button>

  <div style="margin-bottom: 30px" class="container-fluid">
    <hr style="margin: 0;">
    <button style="background: none !important;" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
      aria-expanded="false" aria-controls="collapseOne">
      Therapists (<%= info.therapists.length %>)
    </button>
    <hr style="margin: 0;">
    <div id="collapseOne" class="collapse">
      <div class="card card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">S/N</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Telephone No</th>
                <th scope="col">Gender</th>
                <th scope="col">Average Rating</th>
                <th scope="col">All-time Clients</th>
                <th scope="col">Since</th>
                <th scope="col" colspan="4"></th>
              </tr>
            </thead>
            <tbody id="therapistSection">
              <% for( let index=0; index < info.therapists.length; index++ ) { %>
                <% let data=info.therapists[index] %>
                <tr class="therapistRows" id="therapist-<%= data._id %>">
                  <th scope="row">
                    <%= index+1 %>
                  </th>
                  <td>
                    <%= data.First_Name %>
                  </td>
                  <td>
                    <%= data.Last_Name %>
                  </td>
                  <td>
                    <%= data.Email %>
                  </td>
                  <td>
                    <%= data.Telephone %>
                  </td>
                  <td>
                    <%= data.Sex %>
                  </td>
                  <td>
                    <%= data.Average_Rating !==undefined ? data.Average_Rating.toFixed(2) : 'Not available' %>
                  </td>
                  <td>
                    <%= data.Total_Clients_Count %>
                  </td>
                  <td>
                    <%= new Date(data.createdAt).toDateString() %>
                  </td>
                  <td>
                    <a href="a/ratings/<%= data._id %>"><i class="adminIcon fas fa-external-link-alt"></i></a>
                  </td>
                  <td>
                    <a href="mailto:<%= data.Email %>"><i class="adminIcon fas fa-envelope"></i></a>
                  </td>
                  <% if (data.Disabled) { %>
                    <td>
                      <i id="disable<%= data._id %>" class="disabled adminIcon fas fa-ban"
                        onclick="toggleDisabledStatus('<%= data._id %>', false, 'therapist')">
                      </i>
                    </td>
                  <% } else { %>
                    <td>
                      <i id="disable<%= data._id %>" class="adminIcon fas fa-ban"
                        onclick="toggleDisabledStatus('<%= data._id %>', true, 'therapist')">
                      </i>
                    </td>
                  <% } %>
                  <td id="deleteBtn-<%= data._id %>">
                    <i class="adminIcon fas fa-trash" data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                      onclick="prepareToDeleteUser('<%= data._id %>', 'therapist')">
                    </i>
                  </td>
                  <td class="hide" id="preloader-<%= data._id %>">
                    <i class="preloader spinner-border"></i>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <button style="background: none !important;" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo"
      aria-expanded="false" aria-controls="collapseTwo">
      Clients (<%= info.clients.length %>)
    </button>
    <hr style="margin: 0;">
    <div id="collapseTwo" class="collapse">
      <div class="card card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">S/N</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
                <th scope="col">Email Address</th>
                <th scope="col">Telephone No</th>
                <th scope="col">Gender</th>
                <th scope="col">Age</th>
                <th scope="col">D.O.B</th>
                <th scope="col">Case</th>
                <th scope="col">Assigned therapist</th>
                <th scope="col">Since</th>
                <th scope="col" colspan="4"></th>
              </tr>
            </thead>
            <tbody id="clientSection">
              <% for( let index=0; index < info.clients.length; index++ ) { %>
                <% let data=info.clients[index] %>
                <tr class="clientRows"  id="client-<%= data._id %>">
                  <th scope="row">
                    <%= index+1 %>
                  </th>
                  <td>
                    <%= data.First_Name %>
                  </td>
                  <td>
                    <%= data.Last_Name %>
                  </td>
                  <td>
                    <%= data.Username %>
                  </td>
                  <td>
                    <%= data.Email %>
                  </td>
                  <td>
                    <%= data.Telephone %>
                  </td>
                  <td>
                    <%= data.Sex %>
                  </td>
                  <td>
                    <%= data.Age %>
                  </td>
                  <td>
                    <%= data.Date_of_Birth %>
                  </td>
                  <td>
                    <%= data.Case.join(", ") %>
                  </td>
                  <td>
                    <%= data.Assigned_Therapists ? data.Assigned_Therapists.join(", ") : "No therapist selected yet" %>
                  </td>
                  <td>
                    <%= new Date(data.createdAt).toDateString() %>
                  </td>
                  <td>
                    <a href="a/casefiles/<%= data._id %>"><i class="adminIcon fas fa-external-link-alt"></i></a>
                  </td>
                  <td>
                    <a href="mailto:<%= data.Email %>"><i class="adminIcon fas fa-envelope"></i></a>
                  </td>
                  <% if (data.Disabled) { %>
                    <td>
                      <i id="disable<%= data._id %>" class="disabled adminIcon fas fa-ban"
                        onclick="toggleDisabledStatus('<%= data._id %>', false, 'client')"></i>
                    </td>
                  <% } else { %>
                    <td>
                      <i id="disable<%= data._id %>" class="adminIcon fas fa-ban"
                        onclick="toggleDisabledStatus('<%= data._id %>', true, 'client')"></i>
                    </td>
                  <% } %>
                  <td id="deleteBtn-<%= data._id %>">
                    <i class="adminIcon fas fa-trash" data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                      onclick="prepareToDeleteUser('<%= data._id %>', 'client')"></i>
                  </td>
                  <td class="hide" id="preloader-<%= data._id %>">
                    <i class="preloader spinner-border"></i>
                  </td>

                  <!-- to display info about why the client was reported -->
                  <% if (data.Status==='pending case' ) { %>
                    <td id="reportInfo-<%= data._id %>">
                      <i class="fas fa-exclamation-circle"
                        onclick="getReport('<%= data._id %>', this)"></i>
                    </td>
                  <% } %>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') %>

  <!-- //copyright -->
  <!-- Template JavaScript -->
  <script src="js/template_scripts/jquery-3.3.1.min.js"></script>
  <script src="js/template_scripts/theme-change.js"></script>
  <!--/MENU-JS-->
  <script>
    $(window).on("scroll", function () {
      var scroll = $(window).scrollTop();

      if (scroll >= 80) {
        $("#site-header").addClass("nav-fixed");
      } else {
        $("#site-header").removeClass("nav-fixed");
      }
    });

    //Main navigation Active Class Add Remove
    $(".navbar-toggler").on("click", function () {
      $("header").toggleClass("active");
    });
    $(document).on("ready", function () {
      if ($(window).width() > 991) {
        $("header").removeClass("active");
      }
      $(window).on("resize", function () {
        if ($(window).width() > 991) {
          $("header").removeClass("active");
        }
      });
    });
  </script>
  <!--//MENU-JS-->
  <script src="js/template_scripts/bootstrap.min.js"></script>
  <script src="js/template_scripts/bootstrap.bundle.min.js"></script>

  <!-- My Script -->
  <script src="js/script.js"></script>
</body>

</html>